<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="warn" name="Sale" packages="">
	<Appenders>
		<Console name="STDIO" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
		</Console>

		<File name="MigrationFile" fileName="logs/Migration.log">
			<PatternLayout>
				<Pattern>%d %p %c [%t] %m%n</Pattern>
			</PatternLayout>
		</File>

	</Appenders>

	<Loggers>
		<Root level="info">
			<AppenderRef ref="STDIO" />
		</Root>
		<Logger name="migration" level="warn" additivity = "true">
			<AppenderRef ref="MigrationFile" />
		</Logger>
	</Loggers>
</Configuration> 